{
	"author": "Aarvin Roshin",
	"bugs": "https://github.com/aarvinr/renzu/issues",
	"description": "The bundler-less interface library for TypeScript",
	"devDependencies": {
		"@types/node": "^22.13.4",
		"esbuild": "0.25.0",
		"prettier": "3.5.1",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"homepage": "https://github.com/aarvinr/renzu#readme",
	"license": "CC0-1.0",
	"name": "renzu",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"repository": "github:aarvinr/renzu",
	"scripts": {
		"build": "pnpm run build:declarations && pnpm run build:source",
		"build:declarations": "pnpm exec tsc",
		"build:source": "pnpm exec esbuild src/index.ts --bundle --format=esm --minify --outfile=dist/index.js --platform=node"
	},
	"type": "module",
	"version": "0.0.0"
}
