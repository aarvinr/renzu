{
	"author": "Aarvin Roshin",
	"bugs": "https://github.com/aarvinr/renzu/issues",
	"dependencies": {
		"superjson": "^2.2.2"
	},
	"description": "The bundler-less interface library for TypeScript",
	"devDependencies": {
		"@types/node": "^22.13.4",
		"esbuild": "0.25.0",
		"prettier": "3.5.1",
		"typedoc": "^0.27.7",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"homepage": "https://renzu.js.org",
	"license": "CC0-1.0",
	"name": "renzu",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"repository": "github:aarvinr/renzu",
	"scripts": {
		"build": "pnpm run build:declarations && pnpm run build:source",
		"build:declarations": "tsc",
		"build:source": "esbuild src/index.ts --bundle --format=esm --minify --outfile=dist/index.js --platform=node",
		"docs": "typedoc --entryPoints src/index.ts",
		"format": "prettier --write ."
	},
	"type": "module",
	"version": "0.3.0"
}
